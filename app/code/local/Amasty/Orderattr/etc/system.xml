<?xml version="1.0" encoding="UTF-8"?>
<config>
   <sections>
        <sales_email>
            <groups>
                <order>
                    <fields>
                        <include translate="label comment">
                            <label>Include Amasty Order Attributes into confirmation e-mail</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </include>
                    </fields>
                </order>
            </groups>
        </sales_email>
        
        <amorderattr translate="label" module="amorderattr">
            <label>Order Attributes</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1570</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <checkout translate="label">
                    <label>Checkout Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <progress translate="label">
                            <label>Display attribute values in the progress sidebar</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </progress>
                    </fields>
                </checkout>
                <pdf translate="label">
                    <label>PDF Documents</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <shipment translate="label">
                            <label>Include order attributes into shipment (packing slip)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </shipment>
                        <invoice translate="label">
                            <label>Include order attributes into invoice</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </invoice>
                    </fields>
                </pdf>
            </groups>
        </amorderattr>
    </sections>
</config>