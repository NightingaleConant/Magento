<?xml version="1.0"?>
<config>
    <modules>
        <NGC_Installment>
             <version>0.1.9</version>
        </NGC_Installment>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <NGC_Installment after="Mage_Adminhtml">NGC_Installment_Adminhtml</NGC_Installment>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <models>
            <installment>
                <class>NGC_Installment_Model</class>
                <resourceModel>installment_resource</resourceModel>
            </installment>
            <installment_resource>
                <class>NGC_Installment_Model_Resource</class>
                <entities>
                    <type>
                        <table>installment_type</table>
                    </type>
                    <definition>
                        <table>installment_definition</table>
                    </definition>
                    <master>
                        <table>installment_master</table>
                    </master>
                    <transaction>
                        <table>installment_transaction</table>
                    </transaction>
                </entities>
            </installment_resource>
        </models>
        <resources>
            <ngc_installment_setup>
                <setup>
                    <module>NGC_Installment</module>
                    <class>NGC_Installment_Model_Resource_Setup</class>
                </setup>
            </ngc_installment_setup>
        </resources>
        <blocks>
            <installment>
                <class>NGC_Installment_Block</class>
            </installment>
        </blocks>
        <helpers>
            <installment>
                <class>NGC_Installment_Helper</class>
            </installment>
        </helpers>
        <events>
            <sales_order_save_before>
                <observers>
                    <installment_master_generate_transactions>
                        <class>installment/master_observer</class>
                        <method>onSalesOrderSaveBefore</method>
                    </installment_master_generate_transactions>
                </observers>
            </sales_order_save_before>
            <sales_model_service_quote_submit_success>
                <observers>
                    <installment_master_authorize_payment>
                        <class>installment/master_observer</class>
                        <method>onSalesModelServiceQuoteSubmitSuccess</method>
                    </installment_master_authorize_payment>
                </observers>
            </sales_model_service_quote_submit_success>
            <sales_order_creditmemo_refund>
                <observers>
                    <installment_master_suspend_future_transactions_refund>
                        <class>installment/master_observer</class>
                        <method>onSalesModelOrderCreditmemoRefund</method>
                    </installment_master_suspend_future_transactions_refund>
                </observers>
            </sales_order_creditmemo_refund>
            <sales_order_payment_void>
                <observers>
                    <installment_master_suspend_future_transactions_void>
                        <class>installment/master_observer</class>
                        <method>onSalesModelOrderPaymentVoid</method>
                    </installment_master_suspend_future_transactions_void>
                </observers>
            </sales_order_payment_void>
            <sales_order_payment_cancel>
                <observers>
                    <installment_master_suspend_future_transactions_cancel>
                        <class>installment/master_observer</class>
                        <method>onSalesModelOrderPaymentCancel</method>
                    </installment_master_suspend_future_transactions_cancel>
                </observers>
            </sales_order_payment_cancel>
            <!-- sales_order_payment_cancel_creditmemo>
                <observers>
                    <installment_master_suspend_future_transactions_cancel_creditmemo>
                        <class>installment/master_observer</class>
                        <method>onSaleModelOrderPaymentCancelCreditmemo</method>
                    </installment_master_suspend_future_transactions_cancel_creditmemo>
                </observers>
            </sales_order_payment_cancel_creditmemo -->
        </events>
        <fieldsets>
            <sales_convert_quote>
                <installment_type_id>
                    <to_order>*</to_order>
                </installment_type_id>
            </sales_convert_quote>
        </fieldsets>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <installment>
                    <file>installment.xml</file>
                </installment>
            </updates>
        </layout>
    </adminhtml>
    <crontab>
        <jobs>
            <installment_daily_capture_payment>
                <schedule>
                    <cron_expr>0 18 * * *</cron_expr>
                </schedule>
                <run>
                    <model>installment/observer::dailyCapturePayment</model>
                </run>
            </installment_daily_capture_payment>
            <installment_daily_capture_installment_payment>
                <schedule>
                    <cron_expr>0 19 * * *</cron_expr>
                </schedule>
                <run>
                    <model>installment/observer::dailyCaptureInstallmentPayment</model>
                </run>
            </installment_daily_capture_installment_payment>
        </jobs>
    </crontab>
    <frontend>
        <events></events>
        <routers>
            <installment>
                <use>standard</use>
                <args>
                    <module>NGC_Installment</module>
                    <frontName>installment</frontName>
                </args>
            </installment>
        </routers>
        <translate>
            <modules>
                <NGC_Installment>
                    <files>
                        <default>NGC_Installment.csv</default>
                    </files>
                </NGC_Installment>
            </modules>
        </translate>
        <layout></layout>
    </frontend>
    <default>
        <installment>
        </installment>
    </default>
    <phpunit>
        <suite>
            <modules>
                 <NGC_Installment />
            </modules>
        </suite>
    </phpunit>
</config>